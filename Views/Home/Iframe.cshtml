                <input id="filtro-nombre" class="form-control" type="text" placeholder="Filtrar por nombre">
            </div>
            <div class="col-md-4">
                @Html.DropDownList("areaTrabajo", lst, new { @class = "form-control input_user", id = "filtro-area-trabajo" })
                
            </div>
            <div class="col-md-4">
                <button id="btn-filtrar" class="btn btn-primary">Filtrar</button>
            </div>
        </div>


        <div class="row">
            <div class="col text-end">
                <button type="button" onclick="abrirModalIframe()" class="btn btn-primary btn-lg mb-2 mt-1">Copiar Iframe</button>
            </div>
        </div>
    </div>
    <div id="map" style="height: 600px; width: 100% "></div>
    <script src="script.js"></script>
    <script src="
    https://cdn.jsdelivr.net/npm/markerwithlabel@2.0.2/index.min.js
    "></script>
    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBDaeWicvigtP9xPv919E-RNoxfvC-Hqik&callback=iniciarMap"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/decimal.js/10.3.1/decimal.min.js"></script>
</body>
